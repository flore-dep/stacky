<div class="container">
  <h2 class="text-center mt-4"> My Stack</h2>

  <div>
    <div class="border border-dark p-2 text-center rounded">
      <h5 class="m-0"> Active Stack </h5>
    </div>

    <div class='p-2 m-2'>
      <% @licenses_active.each do |license| %>
        <%= render 'softwares/software_card', license: license, software: license.software %>
      <% end %>
    </div>
  </div>

  <div class="border border-dark p-2 text-center rounded">
    <h5 class="m-0"> Past Stack </h5>
  </div>

 <div class='p-2 m-2'>
  <% @licenses_past.each do |license| %>
      <%= render 'softwares/software_card', license: license, software: license.software %>
    <% end %>
  </div>

</div>
