<div class="header text-center p-5">
  <h2 class="p-2"> Fall in love with your stack</h2>
  <h5 class="p-2"> Your perfect app match is waiting for you – let’s it happen!</h5>
</div>

<div class="container">
  <div class="row justify-content-center bg-white p-3">
    <div class="col-5 m-3">
      <%= simple_form_for '/' do|f| %>
        <%= f.input :software, placeholder: 'Find your crush', class:'form-control p-1 rounded text-center' %>
      <% end %>
    </div>
  </div>

  <div class="mb-5">
    <h5 class="mb-3"> Best apps of the month </h5>
    <div class="row g-5">
      <% @softwares.first(3).each do |software| %>
        <div class="col-4">
          <%= link_to software_path(software), class: "text-decoration-none text-dark" do %>
            <div class="app-card mb-3" style="max-width: 540px; height: 230px;">
              <div class="row g-0">
                <div class="col-md-4">
                  <%= image_tag "payfitlogo.png", class: "img-fluid rounded-start p-3" %>
                </div>
                <div class="col-md-8">
                  <div class="card-body m-3">
                    <h5 class="card-title"> <%= software.name %> </h5>
                    <p class="card-text"> <%= software.description %> </p>
                    <p class="card-text"> <%= software.price_month %> </p>
                    <p class="card-text"> <%= software.tag %> </p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="my-5">
    <h5 class="mb-3"> Our app catalog </h5>
    <div class="row g-5">
      <% @softwares.each do |software| %>
        <div class="col-4">
          <%= link_to software_path(software), class: "text-decoration-none text-dark" do %>
            <div class="app-card mb-3" style="max-width: 540px; height: 230px;">
              <div class="row g-0">
                <div class="col-md-4">
                  <%= image_tag "payfitlogo.png", class: "img-fluid rounded-start p-3" %>
                </div>
                <div class="col-md-8">
                  <div class="card-body m-3">
                    <h5 class="card-title"><%= software.name %></h5>
                    <p class="card-text">
                      <%= truncate(software.description, length: 80, omission: '...') %>
                    </p>
                    <p class="card-text"><%= software.price_month %></p>
                    <p class="card-text"><%= software.tag %></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
