<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Add your software</h1>

      <%= simple_form_for @software do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :logo, as: :file %>
          <%= f.input :description %>
          <%= f.input :price_month %>
          <%= f.input :tag, as: :check_boxes,
                        collection: Software::TAG_LIST,
                        wrapper_html: { class: 'row' },
                        item_wrapper_class: 'col-6',
                        input_html: { class: 'form-check-input mb-2 me-2' },
                        label_html: { class: 'form-check-label' } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Add software", class: "btn btn-success mb-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
